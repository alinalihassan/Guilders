{
  "$schema": "./node_modules/wrangler/config-schema.json",
  "name": "guilders-api",
  "main": "src/index.ts",
  "compatibility_date": "2026-02-12",
  "compatibility_flags": ["nodejs_compat"],
  "dev": {
    "port": 3000
  },
  "triggers": {
    "crons": [
      "0 * * * *"
    ]
  },
  "r2_buckets": [
    {
      "binding": "PUBLIC_BUCKET",
      "bucket_name": "guilders-bucket"
    },
    {
      "binding": "USER_BUCKET",
      "bucket_name": "guilders-user-bucket"
    }
  ]
}